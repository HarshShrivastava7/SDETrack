{
    "name": "SDETRACK Dev Environment",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "nginx",  // or your main service
    "workspaceFolder": "/workspace/SDETRACK",
    "shutdownAction": "stopCompose",
    "services": {
      "nginx": {
        "overrideCommand": false
      }
    },
    "settings": {
      "terminal.integrated.defaultProfile.linux": "bash",
      "editor.formatOnSave": true
    },
    "extensions": [
      "ms-azuretools.vscode-docker",
      "mongodb.mongodb-vscode"
    ],
    "postCreateCommand": "npm install --prefix client && npm install --prefix server",  // Installs dependencies for both client and server
    "forwardPorts": [4001, 4002, 4003, 6379, 8080],
    "remoteUser": "root"
  }
  